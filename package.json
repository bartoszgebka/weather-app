{
	"name": "myweather",
	"version": "1.0.0",
	"description": "weather app implemented in vanilla JS",
	"scripts": {
		"start": "netlify dev",
		"format": "prettier --ignore-path .gitignore --write .",
		"lint": "eslint src/js",
		"lint-style": "stylelint src/sass",
		"build": "parcel build src/index.html && npm run format && npm run lint && npm run lint-style"
	},
	"author": "Bartosz GÄ™bka",
	"license": "ISC",
	"devDependencies": {
		"@parcel/resolver-glob": "^2.8.3",
		"@parcel/transformer-sass": "^2.8.3",
		"eslint": "^8.32.0",
		"eslint-config-prettier": "^8.6.0",
		"husky": "^8.0.3",
		"lint-staged": "^13.1.0",
		"netlify-cli": "^12.7.2",
		"node-fetch": "^3.3.0",
		"parcel": "^2.8.3",
		"prettier": "^2.8.3",
		"stylelint": "^14.16.1",
		"stylelint-config-prettier": "^9.0.4",
		"stylelint-config-prettier-scss": "^0.0.1",
		"stylelint-config-recommended": "^9.0.0",
		"stylelint-config-standard-scss": "^6.1.0"
	},
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged"
		}
	},
	"lint-staged": {
		"src/js/*.js": [
			"prettier --write",
			"eslint --fix",
			"git add"
		],
		"src/sass/*.scss": [
			"prettier --write",
			"stylelint --fix",
			"git add"
		]
	}
}
